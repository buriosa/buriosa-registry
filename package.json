{
  "name": "buriosa-registry",
  "private": true,
  "scripts": {
    "dev": "next dev --no-turbo",
    "build": "next build",
    "prebuild": "pnpm metadata:build",
    "start": "next start",
    "lint": "next lint",
    "metadata:validate": "tsx scripts/validate-metadata.ts",
    "metadata:build": "tsx scripts/generate-registry.ts",
    "registry:build": "py -3.13 scripts/registry-build.py",
    "create": "py -3.13 scripts/create-registry-component.py",
    "registry:sync": "node scripts/registry-sync.mjs",
    "web:install": "pnpm -C apps/web install",
    "web:dev": "pnpm -C apps/web dev",
    "web:build": "pnpm -C apps/web build",
    "web:start": "pnpm -C apps/web start",
    "factory": "pnpm metadata:validate && pnpm metadata:build && pnpm registry:sync"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "next-themes": "^0.4.6",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.5"
  }
}
